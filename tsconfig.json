{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": ".",
    "target": "es5",                          
    "module": "commonjs",                     
    "jsx": "react",                     
    "rootDir": "src",
    "outDir": "build",                    
    "strict": true,                           
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}